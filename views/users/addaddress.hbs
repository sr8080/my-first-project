<script>
function check1(){
  
   const name = document.getElementById('inputFullName')
    const nameRegex = /[a-zA-Z\s]{3,}/; 
    if (!nameRegex.test(name.value)) {
        document.getElementById('nameErrorMessage').textContent = 'Please enter a proper name';
    } 
}
function check2(){
  const mobile = document.getElementById('inputMobile')
  const mobileRegex = /^\d{10}$/; 
  if (!mobileRegex.test(mobile.value)) {
        document.getElementById('errorMessage2').textContent = 'Please enter a valid number';
    } 
}
function check3(){
  const address1 = document.getElementById('inputAddressLine1')
  const adRegex = /[a-zA-Z\s]{3,}/
  if(!adRegex.test(address1.value)){
    document.getElementById('errorMessage3').textContent = 'Please enter a proper address'
  }

}
function check4(){
  const address2 = document.getElementById('inputAddressLine2')
  const adRegex = /[a-zA-Z\s]{3,}/
  if(!adRegex.test(address2.value)){
    document.getElementById('errorMessage4').textContent = 'Please enter a proper address'
  }
}
function check5(){
   const city = document.getElementById('inputCityTown')
   const cityRegex = /^[a-zA-Z\s]*$/;
   if(!cityRegex.test(city.value)){
    document.getElementById('cityerror').textContent = 'Please enter a proper city name'
  }
}
function check7(){
   const pin = document.getElementById('inputZipPostalCode')
   const pinRegex=/\d{6}/
   if(!pinRegex.test(pin.value)){
    document.getElementById('pinerror').textContent = 'Please enter a proper pin'
  }
}
function check6(){
   const state = document.getElementById('state')
    const cityRegex = /^[a-zA-Z\s]*$/;
   if(!cityRegex.test(state.value)){
    document.getElementById('stateerror').textContent = 'Please enter a proper state name'
  }
}


 
</script>




 
